{
    "name": "devium/toml",
    "version": "1.0.5",
    "description": "A PHP encoder/decoder for TOML",
    "keywords": ["toml", "parser", "encode", "decode"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vano Devium",
            "email": "vano@devium.me"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "php-ds/php-ds": "^1.5",
        "symfony/polyfill-mbstring": "^1.30"
    },
    "require-dev": {
        "laravel/pint": "^1.17.1",
        "pestphp/pest": "^2.35",
        "phpstan/phpstan": "^1.11.9",
        "rector/rector": "^1.2.2",
        "symfony/var-dumper": "^6.4|^7.1"
    },
    "autoload": {
        "psr-4": {
            "Devium\\Toml\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "suggest": {
        "ext-ds": "For best performance",
        "ext-mbstring": "For best performance"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "pint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi src",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
